<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TapSettingActivity">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tv_title"
    android:text="Sink 1"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_gravity="center"
    android:textSize="@dimen/title_size"
    android:textColor="@color/colorBlack">

</TextView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/title_vertical_margin"
        android:text="Notification"
        android:textSize="@dimen/text_size"
        android:textColor="@color/colorBlack">
    </TextView>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch_notification"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:enabled="true"
        android:layout_gravity="bottom">

    </Switch>

</LinearLayout>

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/edt_notification"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:focusable="false"
    android:inputType="none"
    android:hint="Set Notification Time"
    android:textColor="@color/colorBlack">

</EditText>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="Timer"
        android:textSize="@dimen/text_size"
        android:textColor="@color/colorBlack">
    </TextView>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch_timer"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:enabled="true"
        android:layout_gravity="bottom">

    </Switch>

</LinearLayout>

<EditText

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/edt_timer"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:hint="Set Timer"
    android:focusable="false"
    android:inputType="none"
    android:textColor="@color/colorBlack">

</EditText>


</LinearLayout>