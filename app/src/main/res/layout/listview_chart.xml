<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_chartLabel"
        android:layout_width="264dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_toStartOf="@+id/tv_chartpecent"
        android:layout_toEndOf="@+id/colorSpace"
        android:textAlignment="textStart"
        android:textColor="#F8000000"
        android:textSize="18sp"
        tools:text="label" />

    <LinearLayout
        android:id="@+id/colorSpace"
        android:layout_width="49dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/tv_chartpecent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#F80A0000"
        android:textSize="18sp" />

</RelativeLayout>