<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/imageView_tap"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/tap_blue"></ImageView>

    <TextView
        android:id="@+id/text_tap_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size"></TextView>

    <TextView
        android:id="@+id/text_tap_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        android:textColor="@color/colorGreen"
        android:textSize="@dimen/text_size"></TextView>

    <ImageView
        android:id="@+id/imageView_popup_tap"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_height="50dp"
        android:src="@drawable/three_dots"></ImageView>

</LinearLayout>