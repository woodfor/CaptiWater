<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView_tap"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/tap_blue"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/text_tap_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/imageView_tap"
        android:text="Tap"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/text_tap_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/imageView_popup_tap"
        android:text="ON"
        android:textColor="@color/colorGreen"
        android:textSize="@dimen/text_size"/>

    <ImageView
        android:id="@+id/imageView_popup_tap"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/three_dots"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>